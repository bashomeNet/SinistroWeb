                            <tbody>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td class="sns-td-action">
                                        <button id="" type="button" class="btn btn-primary btn-xs">
                                            <span class="fa fa-chevron-circle-down sns-margin-icon sns-icon-sm-position" title="Selecionar"></span>Selecionar                                        
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td class="sns-td-action">
                                        <button id="" type="button" class="btn btn-primary btn-xs">
                                            <span class="fa fa-chevron-circle-down sns-margin-icon sns-icon-sm-position" title="Selecionar"></span>Selecionar
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="clearfix line-space-md"></div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">
                        <span class="fa fa-mail-reply sns-margin-icon" title="Voltar"></span>Voltar
                    </button>
                    <!-- <button type="button" class="btn btn-danger btn-sm">Reprovar</button> -->
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Busca Sinistrados -->

    <!-- Modal Busca Causa Mortis -->
    <div class="modal fade sns-modal-filtro-csmortis-avisin" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title" id="sns-title-modal-filtro-csmortis-avisin">Busca Causa Mortis</h4>
                </div>
                <div class="modal-body">

                    <div class="clearfix"></div>

                    <div class="form-group col-md-9 col-sm-9 col-xs-12">
                        <label for="sns-nm-csmortis-busc-avisin">Causa Mortis</label>
                        <input id="sns-nm-csmortis-busc-avisin" type="text" class="form-control input-sm" placeholder=" ">
