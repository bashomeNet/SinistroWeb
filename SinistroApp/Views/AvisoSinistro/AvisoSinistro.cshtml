@{
    ViewBag.Title = "AvisoSinistro";
}

<!-- tool action content -->
<div class="sns-top-toolbox">
    <div class="title_left">
        <div class="btn-group">
            <span class="fa fa-file sns-tool-action" title="Novo"></span>
            <span class="fa fa-folder-open sns-tool-action" title="Recuperar"></span>
            <span class="fa fa-save sns-tool-action" title="Salvar"></span>
            <span class="fa fa-times sns-tool-action" title="Excluir"></span>
            <span class="fa fa-search sns-tool-action sns-tool-action-after" title="Procurar"></span>
        </div>
    </div>
</div>
<!-- tool action content -->

<!-- page content -->
<div class="sns-position-title">

    <div class="clearfix"></div>

    <div class="row calendar-exibit">

        <!-- Informações Gerais do Aviso -->
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h4 class="sns-panel-title">Informações Gerais de Aviso <small>Aviso sinistro</small></h4>

                    <ul class="nav navbar-right panel_toolbox">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"></a>
                        </li>
                    </ul>

                </div>

                <div class="x_content">
                    <form id="sns-form-aviso-avisin" data-parsley-validate class="form-horizontal form-label-left">

                        <!-- Partial View Combos Empresa/Sucursal -->
                        @{ 
                            Html.RenderPartial("_PartialCmbEmpresa", ViewData["CmbEmpresas"]);
                        }

                        @{
                            Html.RenderPartial("_PartialCmbsucursal", ViewData["CmbSucursais"]);
                        }

                        <div class="clearfix"></div>

                        <div class="form-group col-md-2 col-sm-6 col-xs-6">
                            <label for="sns-nr-protocolo-avisin">N° Protocolo</label>
                            <input id="sns-nr-protocolo-avisin" type="text" class="form-control input-sm" required="required" placeholder=" ">
                        </div>
                        <div class="form-group col-md-5 col-sm-6 col-xs-6">
                            <label for="sns-txt-situacao-avisin">Situação</label>
                            <input id="sns-txt-situacao-avisin" type="text" class="form-control input-sm" required="required" placeholder=" ">
                        </div>
                        <div class="form-group col-md-3 col-sm-6 col-xs-6">
                            <label for="sns-cd-autorizacao-avisin">Código de Autorização</label>
                            <input id="sns-cd-autorizacao-avisin" type="text" class="form-control input-sm" required="required" placeholder=" ">
                        </div>

                        <div class="form-group col-md-4 col-sm-6 col-xs-6">
                            <label for="sns-txt-sucursal-avisin">Sucursal</label>
                            <input id="sns-txt-sucursal-avisin" type="text" class="form-control input-sm" required="required" placeholder=" ">
                        </div>
                        <div class="form-group col-md-3 col-sm-6 col-xs-6">
                            <label for="sns-txt-ramo-avisin">Ramo</label>
                            <input id="sns-txt-ramo-avisin" type="text" class="form-control input-sm" required="required" placeholder=" ">
                        </div>
                        <div class="form-group col-md-3 col-sm-6 col-xs-6">
                            <label for="sns-txt-apolice-avisin">Apólice</label>
                            <input id="sns-txt-apolice-avisin" type="text" class="form-control input-sm" required="required" placeholder=" ">
                        </div>

                        <div class="clearfix"></div>

                        <div class="divider-dashed"></div>

                        <div class="form-group col-md-3 col-sm-4 col-xs-12">
                            <label for="sns-dt-ocorrencia-avisin">Data Ocorrência</label>
                            <div class="input-group date">
                                <input id="sns-dt-ocorrencia-avisin" class="form-control input-sm sns-date" type="text">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>

                        <div class="form-group col-md-3 col-sm-4 col-xs-12">
                            <label for="sns-dt-notificacao-avisin">Data Notificação</label>
                            <div class="input-group date">
                                <input id="sns-dt-notificacao-avisin" class="form-control input-sm sns-date" type="text">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>

                        <div class="form-group col-md-3 col-sm-4 col-xs-12">
                            <label for="sns-dt-aviso-avisin">Data Aviso</label>
                            <div class="input-group date">
                                <input id="sns-dt-aviso-avisin" class="form-control input-sm" readonly type="text" data-inputmask="'mask': '99/99/9999'">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>

                        <fieldset class="scheduler-border col-md-7 col-xs-12">
                            <legend class="scheduler-border">&nbsp;</legend>
                            <div class="form-group col-md-4 col-sm-2 col-xs-12">
                                <label for="sns-nr-contrato-avisin">Contrato</label>
                                <input id="sns-nr-contrato-avisin" type="text" class="form-control input-sm" readonly placeholder=" ">
                            </div>
                            <div class="form-group col-md-4 col-sm-2 col-xs-12">
                                <label for="sns-nr-certificado-avisin">Certificado</label>
                                <input id="sns-nr-certificado-avisin" type="text" class="form-control input-sm" readonly placeholder=" ">
                            </div>
                            <div class="form-group col-md-4 col-sm-3 col-xs-12">
                                <label for="sns-txt-endosso-avisin">Endosso</label>
                                <input id="sns-txt-endosso-avisin" type="text" class="form-control input-sm" readonly placeholder=" ">
                            </div>
                            <div class="form-group col-md-6 col-sm-3 col-xs-12">
                                <label for="sns-txt-ramsin-avisin">Ramo Sinistro</label>
                                <input id="sns-txt-ramsin-avisin" type="text" class="form-control input-sm" readonly placeholder=" ">
                            </div>
                            <div class="form-group col-md-6 col-sm-2 col-xs-12">
                                <label for="sns-nr-aviso-avisin">Nº Aviso</label>
                                <input id="sns-nr-aviso-avisin" type="text" class="form-control input-sm" readonly placeholder=" ">
                            </div>
                        </fieldset>

                        <fieldset class="scheduler-border col-md-5 col-md-7 col-xs-12">
                            <legend class="scheduler-border">Valores</legend>
                            <div class="control-group">
                                <div class="form-group col-md-6 col-sm-4 col-xs-12">
                                    <label for="sns-txt-estimativa-avisin">Estimativa</label>
                                    <input id="sns-txt-estimativa-avisin" type="text" class="form-control input-sm" readonly placeholder=" ">
                                </div>
                                <div class="form-group col-md-6 col-sm-4 col-xs-12">
                                    <label for="sns-txt-libpg-avisin">Liberado/Pago</label>
                                    <input id="sns-txt-libpg-avisin" type="text" class="form-control input-sm" readonly placeholder=" ">
                                </div>
                                <div class="form-group col-md-12 col-sm-4 col-xs-12">
                                    <label for="sns-txt-despesas-avisin">Despesas</label>
                                    <input id="sns-txt-despesas-avisin" type="text" class="form-control input-sm" readonly placeholder=" ">
                                </div>
                            </div>
                        </fieldset>

                        <div class="clearfix"></div>

                        <fieldset class="scheduler-border col-md-12">
                            <legend class="scheduler-border"></legend>
                            <div class="form-group col-md-7">
                                <label for="sns-nm-sinist-avisin">Nome Sinistrado</label>
                                <div class="input-group">
                                    <input id="sns-nm-sinist-avisin" type="text" class="form-control input-sm" readonly placeholder=" ">
                                    <span class="input-group-btn">
                                        <button id="sns-btn-busc-modal-avisin" type="button" class="btn sns-btn-ok btn-sm" data-toggle="modal" data-target=".sns-modal-filtro-sinist-avisin">
                                            <span class="fa fa-search sns-icon-sm-position"></span>
                                        </button>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group col-md-5">
                                <label for="sns-cs-mortis-avisin">Causa Mortis</label>
                                <div class="input-group">
                                    <input id="sns-cs-mortis-avisin" type="text" class="form-control input-sm" readonly placeholder=" ">
                                    <span class="input-group-btn">
                                        <button id="sns-btn-busc-modal-avisin" type="button" class="btn sns-btn-ok btn-sm" data-toggle="modal" data-target=".sns-modal-filtro-csmortis-avisin">
                                            <span class="fa fa-search sns-icon-sm-position"></span>
                                        </button>
                                    </span>
                                </div>
                            </div>

                        </fieldset>

                        <div class="clearfix"></div>

                    </form>
                </div>
            </div>
        </div>

        <!-- Coberturas -->
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h4 class="sns-panel-title">Coberturas <small>Sinistro</small></h4>

                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-down"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"></a>
                        </li>
                    </ul>
                    
                </div>

                <div class="x_content sns-panel-closed">

                    @{
                        Html.RenderPartial("_PartialCoberturasAvSns", ViewData["GrdCoberturas"]);
                    }

                    <div class="clearfix line-space-md"></div>

                </div>

            </div>
        </div>

        <!-- Histórico -->
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel sns-panel-closed">
                <div class="x_title">
                    <h4 class="sns-panel-title">Histórico <small>Sinistros</small></h4>

                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-down"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"></a>
                        </li>
                    </ul>

                </div>

                <div class="x_content sns-panel-closed">

                    @{
                        Html.RenderPartial("_PartialHistoricoAvSns", ViewData["GrdHistoricos"]);
                    }

                </div>

            </div>
        </div>

        <!-- Indenização -->
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel sns-panel-closed">
                <div class="x_title">
                    <h4 class="sns-panel-title">Indenização <small>Sinistros</small></h4>

                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a id="sns-open-indeniz-avisin" class="collapse-link"><i class="fa fa-chevron-down"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"></a>
                        </li>
                    </ul>
                    
                </div>

                <div id="sns-content-indeniz-avisin" class="x_content sns-panel-closed">

                    @{
                        Html.RenderPartial("_PartialGridIndenizacaoAvSns", ViewData["GrdIndenizacoes"]);
                    }

                </div>

            </div>
        </div>

        <!-- Despesas -->
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel sns-panel-closed">
                <div class="x_title">
                    <h4 class="sns-panel-title">Despesa <small>Sinistro</small></h4>

                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a id="sns-open-desp-avisin" class="collapse-link"><i class="fa fa-chevron-down"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"></a>
                        </li>
                    </ul>
                    
                </div>

                <div id="sns-content-desp-avisin" class="x_content sns-panel-closed">

                    @{
                        Html.RenderPartial("_PartialGridDespesasAvSns", ViewData["GrdDespesas"]);
                    }

                 </div>

            </div>
        </div>

        <!-- Observações -->
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel sns-panel-closed">
                <div class="x_title">
                    <h4 class="sns-panel-title">Observações <small>Sinistro</small></h4>

                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a id="sns-open-indeniz-avisin" class="collapse-link"><i class="fa fa-chevron-down"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"></a>
                        </li>
                    </ul>

                </div>

                <div id="sns-content-indeniz-avisin" class="x_content sns-panel-closed">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group col-md-9 col-sm-9 col-xs-9">
                            <label for="sns-obs-avisin">Observação</label>
                            <small class="clearfix sns-validation sns-none">Preenchimento obrigatório!</small>
                            <textarea id="sns-obs-avisin" class="form-control" maxlength="300" placeholder=" "></textarea>
                        </div>
                        <div class="form-group col-md-3 col-sm-3 col-xs-3">
                            <button id="sns-btn-add-list-obs-avisin" type="button" class="btn sns-btn-ok btn-sm sns-btn-obs-align-avisin">
                                <span class="fa fa-pencil-square-o sns-margin-icon" title="Cadastrar"></span>Cadastrar
                            </button>
                        </div> 
                    </div>
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="col-md-9 col-sm-9 col-xs-9">
                            <ul id="sns-lis-obs-avisin" class="list-group"></ul>
                        </div>
                        <div id="sns-div-btn-salvar-obs-avisin" class="col-md-12 col-sm-12 col-xs-12">
                        </div>
                    </div>
                    <button id="btn-modal-msg-error" type="button" class="invisible" data-toggle="modal" data-target=".sns-modal-msg-error-avisin">
                    </button>
                </div>

            </div>
        </div>

    </div>

    <!-- Modal Mensagem Erro -->
    <div class="modal fade sns-modal-msg-error-avisin" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title" id="sns-title-modal-msg-error-avisin">Erro!</h4>
                </div>
                <div class="modal-body">

                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <ul id="sns-ul-msg-error-avisin" class="list-group">
                            <li id="sns-mensagem-modal-msg-error-avisin" class="list-group-item list-group-item-danger"></li>
                        </ul>
                    </div>

                    <div class="clearfix line-space-md"></div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">
                        <span class="fa fa-mail-reply sns-margin-icon" title="Voltar"></span>Voltar
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Mensagem Erro -->

    <!-- Modal Busca Sinistrados  -->
