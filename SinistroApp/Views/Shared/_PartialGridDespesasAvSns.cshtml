@model IEnumerable<SinistroApp.Models.GridDespesasModel>

<div class="col-md-12 col-sm-12 col-xs-12 table-responsive">
    <table id="sns-table-desp-avisin" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th class="details-control sorting_disabled" rowspan="1" colspan="1"></th>
                <th>Cód. Indenização</th>
                <th>Situação</th>
                <th>Cobertura</th>
                <th>Beneficiário</th>
                <th>Valor Total</th>
                <th>
                    <span class="nobr">Ação</span>
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td id="@Html.DisplayFor(modelItem => item.idDesp)" class="details-control"></td>
                        <td>@Html.DisplayFor(modelItem => item.codIndenizacaoDesp)</td>
                        <td>@Html.DisplayFor(modelItem => item.situacaoDesp)</td>
                        <td>@Html.DisplayFor(modelItem => item.coberturaDesp)</td>
                        <td>@Html.DisplayFor(modelItem => item.beneficiarioDesp)</td>
                        <td>@Html.DisplayFor(modelItem => item.valTotalDesp)</td>
                        <td class="sns-td-action">
                            <a href="DespesaSinistro">
                                <div id="" type="button" class="btn btn-primary btn-xs">
                                    <span class="fa fa-binoculars sns-margin-icon sns-icon-sm-position" title="Detalhar"></span>Detalhar
                                </div>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>


</div>