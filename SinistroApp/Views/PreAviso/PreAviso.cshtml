@model IEnumerable<SinistroApp.Models.GridPreAvisoModel>
@{
    ViewBag.Title = "FrmPreAviso";
}

<!-- tool action content -->
<div class="sns-top-toolbox">
    <div class="title_left">
        <div class="btn-group">
            <span class="fa fa-folder-open sns-tool-action" title="Recuperar"></span>
            <span class="fa fa-search sns-tool-action sns-tool-action-after" title="Procurar"></span>
        </div>
    </div>
</div>
<!-- tool action content -->

<!-- container -->
<div class="sns-position-title">

    <div class="clearfix"></div>

    <div class="row">

        <div class="col-md-12 col-sm-12 col-xs-12">
            <div id="sns-panel-pre-aviso" class="x_panel">
                <div class="x_title">
                    <h4 class="sns-panel-title">Sinistrados</h4>

                    <ul class="nav navbar-right panel_toolbox">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"></a>
                        </li>
                    </ul>
                    
                </div>

                <!-- Partial View Combos Empresa/Sucursal -->
                @{
                    Html.RenderPartial("_PartialCmbEmpresa", ViewData["CmbEmpresas"]);
                }

                @{
                    Html.RenderPartial("_PartialCmbsucursal", ViewData["CmbSucursais"]);
                }

                <div class="form-group col-md-5 col-sm-6 col-xs-12">
                    <label>Situação</label>
                    <div class="">
                        <select id="sns-cmb-situacao-pre-aviso" class="form-control input-sm">
                            <option value="0">SELECIONE</option>
                        </select>
                    </div>
                </div>

                <div class="clearfix line-space-md"></div>

                <div class="x_content">

                    <div class="col-md-12 col-sm-12 col-xs-12 table-responsive">

                        <table id="sns-table-pre-aviso" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="details-control sorting_disabled" rowspan="1" colspan="1"></th>
                                    <th>Nome do sinistrado</th>
                                    <th>Data de nascimento</th>
                                    <th>Cód. Autorização</th>
                                    <th>Motivo do não atendimento</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td id="@Html.DisplayFor(modelItem => item.idPreAviso)" class="details-control"></td>
                                            <td>@Html.DisplayFor(modelItem => item.nmSinistrado)</td>
                                            <td>@Html.DisplayFor(modelItem => item.dtNascimento)</td>
                                            <td>@Html.DisplayFor(modelItem => item.codAutorizacao)</td>
                                            <td>@Html.DisplayFor(modelItem => item.motNaoAtendimento)</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>

                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- Modal Reprova Pré Aviso -->
    <div class="modal fade sns-modal-reprova-preavis" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title" id="sns-modal-reprova-preavis">Reprovação de Pré Aviso</h4>
                </div>

                <form id="demo-form" data-parsley-validate="">
                    <div class="modal-body">
                        <p>
                            <label for="heard">Motivo Reprovação</label>
                            <select id="heard" class="form-control input-sm" required="">
                                <option value="0">Selecione</option>
                                <option value="1">Motivo 1</option>
                                <option value="2">Motivo 2</option>
                                <option value="2">Motivo 3</option>
                            </select>
                        </p>
                        <p>
                            <label for="sns-modal-txt-reprova-preavis">Justificativa Reprovação</label>
                            <textarea id="sns-modal-txt-reprova-preavis" required="required" class="form-control" name="sns-modal-txt-reprova-preavis"></textarea>
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">
                            <span class="fa fa-mail-reply sns-margin-icon sns-icon-sm-position" title="Voltar"></span>Voltar
                        </button>
                        <button type="button" class="btn sns-btn-no btn-sm">
                            <span class="fa fa-times sns-margin-icon sns-icon-sm-position" title="Reprovar"></span>Reprovar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Modal Reprova Pré Aviso -->

</div>
<!-- container -->
@section scripts {
    <script src="~/Scripts/preAviso.js"></script>
}